<style>
    @keyframes pulse-dot {
        0%,
        100% {
            box-shadow: 0 0 0 0 rgba(163, 230, 53, 0.5);
        }
        50% {
            box-shadow: 0 0 0 5px rgba(163, 230, 53, 0);
        }
    }
</style>

<section class="font-rajdhani bg-[#0a0c10] min-h-screen py-10 px-8 text-text-secondary">
    <div
        class="flex flex-col gap-1.5 mb-10 relative pl-5 before:content-[''] before:absolute before:left-0 before:top-0 before:bottom-0 before:w-0.5 before:bg-linear-to-b before:from-cyan-bright before:to-purple-bright before:rounded-sm"
    >
        <h1 class="text-[2rem] font-bold tracking-[0.12em] uppercase text-[#e8edf5] m-0 leading-none">
            ADMIN <span class="text-cyan-bright">DASHBOARD</span>
        </h1>
        <p class="text-[0.85rem] text-text-muted tracking-[0.05em] m-0 font-techmono">
            // panel kontrol sistem · session aktif
        </p>
    </div>

    <div
        class="flex items-center gap-3 bg-[#0f1117] border border-border border-l-[3px] border-l-[#a3e635] rounded-sm py-4 px-6 mb-8 relative overflow-hidden after:content-[''] after:absolute after:top-0 after:left-0 after:right-0 after:h-0.5 after:bg-linear-to-r after:from-[#a3e635] after:to-transparent"
    >
        <div class="w-2 h-2 rounded-full bg-[#a3e635] shrink-0 animate-[pulse-dot_1.8s_ease-in-out_infinite]"></div>
        <div class="font-techmono text-[0.82rem] tracking-[0.06em] text-[#bef264]">
            LOGIN_SUCCESS · Halo, <strong class="text-[#e8edf5] font-normal"><%= username %></strong> — session aktif
            dan siap digunakan.
        </div>
    </div>

    <div class="grid grid-cols-[repeat(auto-fill,minmax(240px,1fr))] gap-4 mb-8">
        <div
            class="bg-[#0f1117] border border-border rounded py-5 px-6 relative overflow-hidden transition-all hover:border-[#2a3347] hover:-translate-y-0.5 before:content-[''] before:absolute before:top-0 before:left-0 before:right-0 before:h-0.5 before:bg-linear-to-r before:from-cyan-bright before:to-transparent"
        >
            <div class="font-techmono text-[0.68rem] tracking-[0.14em] uppercase mb-3 text-cyan-bright">
                ◈ Inventory
            </div>
            <div class="text-[0.85rem] text-text-muted tracking-[0.05em] mb-1 font-techmono">// modul aktif</div>
            <div class="text-[1.6rem] font-bold text-[#e8edf5] tracking-[0.05em] leading-none">READ</div>
        </div>
        <div
            class="bg-[#0f1117] border border-border rounded py-5 px-6 relative overflow-hidden transition-all hover:border-[#2a3347] hover:-translate-y-0.5 before:content-[''] before:absolute before:top-0 before:left-0 before:right-0 before:h-0.5 before:bg-linear-to-r before:from-[#a3e635] before:to-transparent"
        >
            <div class="font-techmono text-[0.68rem] tracking-[0.14em] uppercase mb-3 text-[#a3e635]">◈ Items</div>
            <div class="text-[0.85rem] text-text-muted tracking-[0.05em] mb-1 font-techmono">// akses level</div>
            <div class="text-[1.6rem] font-bold text-[#e8edf5] tracking-[0.05em] leading-none">CRUD</div>
        </div>
        <div
            class="bg-[#0f1117] border border-border rounded py-5 px-6 relative overflow-hidden transition-all hover:border-[#2a3347] hover:-translate-y-0.5 before:content-[''] before:absolute before:top-0 before:left-0 before:right-0 before:h-0.5 before:bg-linear-to-r before:from-amber-bright before:to-transparent"
        >
            <div class="font-techmono text-[0.68rem] tracking-[0.14em] uppercase mb-3 text-amber-bright">◆ Limited</div>
            <div class="text-[0.85rem] text-text-muted tracking-[0.05em] mb-1 font-techmono">// akses level</div>
            <div class="text-[1.6rem] font-bold text-[#e8edf5] tracking-[0.05em] leading-none">CRUD</div>
        </div>
        <div
            class="bg-[#0f1117] border border-border rounded py-5 px-6 relative overflow-hidden transition-all hover:border-[#2a3347] hover:-translate-y-0.5 before:content-[''] before:absolute before:top-0 before:left-0 before:right-0 before:h-0.5 before:bg-linear-to-r before:from-purple-bright before:to-transparent"
        >
            <div class="font-techmono text-[0.68rem] tracking-[0.14em] uppercase mb-3 text-purple-bright">◈ Users</div>
            <div class="text-[0.85rem] text-text-muted tracking-[0.05em] mb-1 font-techmono">// akses level</div>
            <div class="text-[1.6rem] font-bold text-[#e8edf5] tracking-[0.05em] leading-none">MGMT</div>
        </div>
    </div>

    <div
        class="bg-[#0f1117] border border-border rounded px-6 py-6 relative overflow-hidden after:content-[''] after:absolute after:top-0 after:left-0 after:right-0 after:h-0.5 after:bg-linear-to-r after:from-cyan-bright after:via-purple-bright after:to-transparent"
    >
        <div class="font-techmono text-[0.75rem] text-cyan-bright tracking-[0.14em] uppercase m-0 mb-5">
            // session_info
        </div>
        <div class="flex justify-between items-center py-2.5 border-b border-[#141720]">
            <span class="font-techmono text-text-secondary tracking-[0.08em] uppercase">administrator</span>
            <span class="text-[0.95rem] font-semibold text-text-secondary tracking-[0.04em]"><%= username %></span>
        </div>
        <div class="flex justify-between items-center py-2.5 border-b border-[#141720]">
            <span class="font-techmono text-text-secondary tracking-[0.08em] uppercase">status</span>
            <span class="text-[#a3e635] font-techmono text-[0.8rem]">● ACTIVE</span>
        </div>
        <div class="flex justify-between items-center py-2.5 border-b border-[#141720]">
            <span class="font-techmono text-text-secondary tracking-[0.08em] uppercase">role</span>
            <span class="text-[0.95rem] font-semibold text-text-secondary tracking-[0.04em]">ADMIN</span>
        </div>
        <div class="flex justify-between items-center py-2.5">
            <span class="font-techmono text-text-secondary tracking-[0.08em] uppercase">akses route</span>
            <span class="text-[0.95rem] font-semibold text-text-secondary tracking-[0.04em]">FULL</span>
        </div>
    </div>
</section>
