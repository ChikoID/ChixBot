<style>
    @keyframes blink {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0.2;
        }
    }
</style>

<section class="font-rajdhani bg-[#0a0c10] min-h-screen py-10 px-8 text-text-secondary">
    <div
        class="flex flex-col gap-1.5 mb-8 relative pl-5 before:content-[''] before:absolute before:left-0 before:top-0 before:bottom-0 before:w-0.5 before:bg-linear-to-b before:from-cyan-bright before:to-[#7c3aed] before:rounded-sm"
    >
        <h1 class="text-[2rem] font-bold tracking-[0.12em] uppercase text-[#e8edf5] m-0 leading-none">
            INV<span class="text-cyan-bright">ENTORY</span>
        </h1>
        <p class="text-[0.85rem] text-text-muted tracking-[0.05em] m-0 font-techmono">
            // read-only · semua data inventory user
        </p>
    </div>

    <div
        class="inline-flex items-center gap-1.5 text-[0.7rem] font-techmono tracking-[0.08em] text-cyan-bright bg-[rgba(0,229,255,0.08)] border border-[rgba(0,229,255,0.2)] py-1 px-3 rounded-xs w-fit mb-4 before:content-['●'] before:text-[0.5rem] before:animate-[blink_1.5s_ease-in-out_infinite]"
    >
        LIVE READ-ONLY ACCESS
    </div>

    <div
        class="bg-[#0f1117] border border-border rounded overflow-x-auto relative before:content-[''] before:absolute before:top-0 before:left-0 before:right-0 before:h-0.5 before:bg-linear-to-r before:from-cyan-bright before:via-[#7c3aed] before:to-transparent"
    >
        <table class="w-full border-collapse text-[0.9rem] min-w-150">
            <thead class="bg-[#141720]">
                <tr>
                    <th
                        class="py-3.5 px-5 text-left font-techmono text-[0.7rem] tracking-[0.14em] uppercase text-cyan-bright font-normal border-b border-border"
                    >
                        #ID
                    </th>
                    <th
                        class="py-3.5 px-5 text-left font-techmono text-[0.7rem] tracking-[0.14em] uppercase text-cyan-bright font-normal border-b border-border"
                    >
                        User
                    </th>
                    <th
                        class="py-3.5 px-5 text-left font-techmono text-[0.7rem] tracking-[0.14em] uppercase text-cyan-bright font-normal border-b border-border"
                    >
                        Item Type
                    </th>
                    <th
                        class="py-3.5 px-5 text-left font-techmono text-[0.7rem] tracking-[0.14em] uppercase text-cyan-bright font-normal border-b border-border"
                    >
                        Item
                    </th>
                    <th
                        class="py-3.5 px-5 text-left font-techmono text-[0.7rem] tracking-[0.14em] uppercase text-cyan-bright font-normal border-b border-border"
                    >
                        Qty
                    </th>
                    <th
                        class="py-3.5 px-5 text-left font-techmono text-[0.7rem] tracking-[0.14em] uppercase text-cyan-bright font-normal border-b border-border"
                    >
                        Price
                    </th>
                </tr>
            </thead>
            <tbody>
                <% if (!inventory || inventory.length === 0) { %>
                <tr>
                    <td colspan="6" class="py-3.5 px-5 text-text-secondary font-rajdhani text-[0.95rem] font-medium">
                        <div
                            class="text-center py-12 px-5 font-techmono text-[0.8rem] text-text-darker tracking-[0.08em]"
                        >
                            // NO_DATA · belum ada data inventory
                        </div>
                    </td>
                </tr>
                <% } %>

                <% if (inventory && inventory.length > 0) { %> <% inventory.forEach((row) => { %>
                <tr class="border-b border-[#141720] transition-colors hover:bg-[rgba(0,229,255,0.03)]">
                    <td class="py-3.5 px-5 text-text-secondary font-rajdhani text-[0.95rem] font-medium text-base">
                        <%= row.id %>
                    </td>
                    <td class="py-3.5 px-5 text-text-secondary font-rajdhani text-[0.95rem] font-medium">
                        <%= row.name || `User #${row.user_id}` %>
                    </td>
                    <td class="py-3.5 px-5 text-text-secondary font-rajdhani text-[0.95rem] font-medium">
                        <span
                            class="inline-block py-0.5 px-2.5 rounded-xs text-[0.75rem] font-techmono tracking-[0.06em] bg-[rgba(124,58,237,0.15)] border border-[rgba(124,58,237,0.3)] text-purple-bright"
                        >
                            <%= row.item_type %>
                        </span>
                    </td>
                    <td class="py-3.5 px-5 text-text-secondary font-rajdhani text-[0.95rem] font-medium">
                        <%= row.item_name || `Item #${row.item_id}` %>
                    </td>
                    <td class="py-3.5 px-5 text-text-secondary font-rajdhani text-[0.95rem] font-medium">
                        <%= row.quantity %>
                    </td>
                    <td class="py-3.5 px-5 text-text-secondary font-rajdhani text-[0.95rem] font-medium">
                        <%= row.item_price || 0 %>
                    </td>
                </tr>
                <% }); %>
                <% } %>
            </tbody>
        </table>
    </div>
</section>
