<aside
    class="bg-fix z-40 w-72 h-full transition-all -translate-x-full sm:translate-x-0 p-4 font-rajdhani hidden-scrollbar"
>
    <% const activeClasses = [ "flex", "items-center", "gap-3", "w-full", "px-3", "py-2", "rounded-xs", "transition",
    "text-primary", "bg-button-primary", "hover:bg-button-primary/80", "font-bold", ].join(" "); const inactiveClasses =
    [ "flex", "items-center", "gap-3", "w-full", "px-3", "py-2", "rounded-xs", "transition", "bg-button-secondary",
    "text-white", "hover:bg-button-secondary/80", ].join(" "); const pathNow = currentPath || ""; const isActive =
    (prefix) => pathNow === prefix || pathNow.startsWith(prefix + "/"); %>
    <div
        class="h-full px-3 py-4 flex flex-col items-start overflow-y-auto bg-card text-secondary rounded-xs p-6 hidden-scrollbar border border-border"
    >
        <h2 class="text-2xs font-extrabold mb-6">Admin Panel</h2>
        <nav class="flex-center h-full flex-col gap-3 w-full">
            <a href="/auth/me" class="<%= isActive('/auth/me') ? activeClasses : inactiveClasses %>">Dashboard</a>
            <a href="/users" class="<%= isActive('/users') ? activeClasses : inactiveClasses %>">Users</a>
            <a href="/cards" class="<%= isActive('/cards') ? activeClasses : inactiveClasses %>">Cards</a>
            <a href="/items" class="<%= isActive('/items') ? activeClasses : inactiveClasses %>">Items</a>
            <a href="/items-limited" class="<%= isActive('/items-limited') ? activeClasses : inactiveClasses %>"
                >Items Limited</a
            >
            <a href="/inventory" class="<%= isActive('/inventory') ? activeClasses : inactiveClasses %>">Inventory</a>
            <a
                href="/auth/logout"
                class="inline-block px-3 py-1 rounded-xs bg-[rgba(239,68,68,0.1)] border border-[rgba(239,68,68,0.22)] text-button-accent mt-auto w-full font-techmono"
            >
                Logout</a
            >
        </nav>
    </div>
</aside>
